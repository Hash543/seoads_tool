doctype html
html(lang="en")
	head
		title= pageTitle
		link(rel="stylesheet" type="text/css" href="/css/main.css")
	body
		include ./header.jade
		div(class='main',style={width:'100%'})
			div(class='box',style={width:'970px',margin:'auto',border:'1px dashed #55aaff',padding:'20px'})
				form(name='adslconfig',action='',method='post')
					div 
						| 連線名稱 : 
						input(type='text',name='name',value=adsl.name)
					div
						| 連線帳號 : 
						input(type='text',name='id',value=adsl.id)
					div
						| 密碼 : 
						input(type='text',name='password',value=adsl.password)
					div
						input(type='submit',name='test',value='更新資料')